# C++14 supported only by Clang... so in its own suite and explicit.
test-suite cxx14
:
    [ subdir-run call_if : equal_to_cxx14 :
            <toolset>clang:<cxxflags>-std=c++1y ]
    [ subdir-run call_if : advance_cxx14 :
            <toolset>clang:<cxxflags>-std=c++1y ]
;
explicit cxx14 ;

