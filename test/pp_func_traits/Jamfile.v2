
import testing ;

rule test-pp ( filename ) {
    run $(filename).cpp ;
    preprocessed $(filename)-pp : $(filename).cpp : <cxxflags>-DDEBUG ;
    explicit filename-pp ;
}

test-pp access ;
test-pp verbatim ;
test-pp export ;
test-pp template ;
test-pp classifiers ;
test-pp return_ ;
test-pp name ;
test-pp params ;
test-pp cv ;
test-pp ref ;
test-pp except ;
test-pp trailing_return ;
test-pp virt ;

